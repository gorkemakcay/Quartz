<table id="standardStatementTable" class="display" style="width:100%">
    <thead>
        <tr>
            <th>Name</th>
        </tr>
    </thead>

    <tbody>
        @if (ViewBag.StandardStatements != null)
        {
            foreach (var standardStatement in ViewBag.StandardStatements)
            {
                <tr>
                    <td>@standardStatement.Name</td>
                </tr>
            }
        }
    </tbody>
</table>

<br />

<div class="modal-footer">
    <br />
    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#limStandardStatementAddModal">+ Add</button>
    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
</div>
